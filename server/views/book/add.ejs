<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Assignment Title" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Assignment Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Assignment Author" name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Published</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Published year" name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Assignment Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Assignment's Price" name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>